<view>
    <view class="form-pro" wx:if="{{_cate == '1'}}">
        <image src="../../../assets/images/form-pro-05.png"></image>
    </view>
    <view class="form-pro" wx:if="{{_cate == '2'}}">
            <image src="../../../assets/images/form-pro-06.png"></image>
        </view>
        <form bindsubmit="userSubmit">
    <view class="form-body">
        <view>
            <text>收货人</text>
            <input type="text" placeholder="姓 名" name="name"></input>
        </view>
        <view>
            <text>手机号码</text>
            <input maxlength="11" type="number"  type="text" placeholder="手机号码" name="telePhone"></input>
        </view>
        <view>
            <text>详细地址</text>
            <input type="text" placeholder="填写省/市/区" name="addr"></input>
        </view>
        <view class="form-box">
            <button class="btn-submit" formType="submit"></button>
            <text>请认真填写信息，一旦提交不可修改</text>
        </view>
    </view></form>
    <view class="adv"><button class="linkminiapp" bindtap="gotominiapp">速速抢购</button></view>
</view>